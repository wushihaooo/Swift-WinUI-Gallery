<?xml version="1.0" encoding="utf-8"?>
<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header Grid -->
        <Grid x:Name="headerGrid" Grid.Row="0"/>
        
        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="exampleStackPanel" Margin="36,24,36,36">
                <!-- Example 1: Symbol Icon -->
                <Grid x:Name="Example1" Margin="0,0,0,24"/>
                
                <!-- Example 2: Bitmap Icon -->
                <Grid x:Name="Example2" Margin="0,0,0,24"/>
                
                <!-- Example 3: Font Icon -->
                <Grid x:Name="Example3" Margin="0,0,0,24"/>
                
                <!-- Example 4: Three-state Path Icon -->
                <Grid x:Name="Example4" Margin="0,0,0,24"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
